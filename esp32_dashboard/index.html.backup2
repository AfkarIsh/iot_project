<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ESP32 Sensor Dashboard</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>ðŸ“¡ Dashboard</h2>
        </div>
        <ul class="sidebar-menu">
            <li><a href="#overview" class="active"><span>ðŸ“Š</span> Overview</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <!-- Header -->
            <header class="header">
                <div class="header-content">
                    <h1 class="title">
                        <span class="title-icon">ðŸ“¡</span>
                        ESP32 Sensor Dashboard
                    </h1>
                    <div class="connection-status" id="connectionStatus">
                        <span class="status-dot"></span>
                        <span class="status-text">Connecting...</span>
                    </div>
                </div>
                <p class="subtitle">Real-time Environmental Monitoring System</p>
            </header>

            <!-- Sensor Grid -->
            <div class="sensor-grid">

                <!-- Temperature Card -->
                <div class="sensor-card clean-card temperature-card" id="temperature-card">
                    <div class="card-header">
                        <div class="icon-box">
                            <div class="card-header">
                                <div class="icon-box">
                                    <i class="fas fa-tint"></i>
                                </div>
                                <div class="mini-chart-container">
                                    <canvas id="humMiniChart"></canvas>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="sensor-label">Humidity</div>
                                <div class="value-container">
                                    <div class="sensor-value" id="humidity">--</div>
                                    <div class="unit">%</div>
                                </div>
                            </div>
                            <div class="accent-bar"></div>
                        </div>

                        <!-- Soil Moisture Card -->
                        <div class="sensor-card clean-card soil-card" id="soil-card">
                            <div class="card-header">
                                <div class="icon-box">
                                    <div class="sensor-card clean-card motion-card" id="motion-card">
                                        <div class="card-header">
                                            <div class="icon-box">
                                                <i class="fas fa-walking"></i>
                                            </div>
                                            <div class="status-indicator" id="motionStatus">
                                                <span class="status-dot"></span>
                                                <span class="status-label">No Motion</span>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="sensor-label">Motion Status</div>
                                            <div class="value-container">
                                                <div class="sensor-value" style="font-size: 1.5rem;">Monitoring</div>
                                            </div>
                                        </div>
                                        <div class="accent-bar"></div>
                                    </div>

                                    <!-- Relay Card -->
                                    <div class="sensor-card clean-card relay-card" id="relay-card">
                                        <div class="card-header">
                                            <div class="icon-box">
                                                <i class="fas fa-power-off"></i>
                                            </div>
                                            <div class="status-indicator" id="relayStatus">
                                                <span class="status-dot"></span>
                                                <span class="status-label">OFF</span>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="sensor-label">Relay Control</div>
                                            <div class="toggle-switch">
                                                <input type="checkbox" id="relayToggle" class="toggle-input">
                                                <label for="relayToggle" class="toggle-label">
                                                    <span class="toggle-button"></span>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="accent-bar"></div>
                                    </div>

                                    <!-- LED Control Card -->
                                    <div class="sensor-card clean-card led-card" id="led-card">
                                        <div class="card-header">
                                            <div class="icon-box">
                                                <i class="fas fa-lightbulb"></i>
                                            </div>
                                            <div class="status-indicator" id="ledStatus">
                                                <span class="status-dot"></span>
                                                <span class="status-label">OFF</span>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="sensor-label">LED Control</div>
                                            <div class="toggle-switch">
                                                <input type="checkbox" id="ledToggle" class="toggle-input">
                                                <label for="ledToggle" class="toggle-label">
                                                    <span class="toggle-button"></span>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="accent-bar"></div>
                                    </div>

                                    <!-- CO2 Card -->
                                    <div class="sensor-card clean-card air-card">
                                        <div class="card-header">
                                            <div class="icon-box"
                                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                                <i class="fas fa-cloud"></i>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="sensor-label">COâ‚‚ Level</div>
                                            <div class="value-container">
                                                <div class="sensor-value" id="co2">--</div>
                                                <div class="unit">ppm</div>
                                            </div>
                                        </div>
                                        <div class="accent-bar" style="background: #764ba2;"></div>
                                    </div>

                                    <!-- CO Card -->
                                    <div class="sensor-card clean-card air-card">
                                        <div class="card-header">
                                            <div class="icon-box"
                                                style="background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);">
                                                <i class="fas fa-smog"></i>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="sensor-label">CO Level</div>
                                            <div class="value-container">
                                                <div class="sensor-value" id="co">--</div>
                                                <div class="unit">ppm</div>
                                            </div>
                                        </div>
                                        <div class="accent-bar" style="background: #ff9a9e;"></div>
                                    </div>

                                    <!-- NH4 Card -->
                                    <div class="sensor-card clean-card air-card">
                                        <div class="card-header">
                                            <div class="icon-box"
                                                style="background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);">
                                                <i class="fas fa-wind"></i>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="sensor-label">Ammonia</div>
                                            <div class="value-container">
                                                <div class="sensor-value" id="nh4">--</div>
                                                <div class="unit">ppm</div>
                                            </div>
                                        </div>
                                        <div class="accent-bar" style="background: #a1c4fd;"></div>
                                    </div>

                                    <!-- Alcohol Card -->
                                    <div class="sensor-card clean-card air-card">
                                        <div class="card-header">
                                            <div class="icon-box"
                                                style="background: linear-gradient(135deg, #fccb90 0%, #d57eeb 100%);">
                                                <i class="fas fa-wine-glass"></i>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="sensor-label">Alcohol</div>
                                            <div class="value-container">
                                                <div class="sensor-value" id="alcohol">--</div>
                                                <div class="unit">ppm</div>
                                            </div>
                                        </div>
                                        <div class="accent-bar" style="background: #d57eeb;"></div>
                                    </div>

                                    <!-- Acetone Card -->
                                    <div class="sensor-card clean-card air-card">
                                        <div class="card-header">
                                            <div class="icon-box"
                                                style="background: linear-gradient(135deg, #e0c3fc 0%, #8ec5fc 100%);">
                                                <i class="fas fa-flask"></i>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="sensor-label">Acetone</div>
                                            <div class="value-container">
                                                <div class="sensor-value" id="acetone">--</div>
                                                <div class="unit">ppm</div>
                                            </div>
                                        </div>
                                        <div class="accent-bar" style="background: #8ec5fc;"></div>
                                    </div>

                                </div>

                                <!-- MQ-135 Air Quality Comparison Chart -->
                                <div class="chart-section" id="charts">
                                    <h2 class="section-title">ðŸ“Š MQ-135 Air Quality Comparison</h2>
                                    <div class="chart-container">
                                        <canvas id="airQualityChart"></canvas>
                                    </div>
                                </div>

                                <!-- MQ-135 Historical Trend Chart -->
                                <div class="chart-section">
                                    <h2 class="section-title">ðŸ“ˆ MQ-135 Historical Trends</h2>
                                    <div class="chart-container">
                                        <canvas id="trendChart"></canvas>
                                    </div>
                                </div>

                                <!-- MQ-135 Details Section -->
                                <div class="details-section">
                                    <h2 class="section-title">MQ-135 Sensor Details</h2>
                                    <div class="details-grid">
                                        <div class="detail-item">
                                            <span class="detail-label">Raw ADC Value:</span>
                                            <span class="detail-value" id="mq135Raw">--</span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Voltage:</span>
                                            <span class="detail-value" id="mq135Voltage">-- V</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Footer -->
                                <footer class="footer">
                                    <p>ESP32 Multi-Sensor Dashboard | Real-time Monitoring</p>
                                    <div class="last-update" id="lastUpdate">Last Update: --</div>
                                </footer>

                            </div>
                        </div>

                        <script src="js/dashboard.js"></script>
</body>

</html>